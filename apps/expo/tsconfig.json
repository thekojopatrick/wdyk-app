{
  "extends": ["@acme/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@env": ["./src/core/env.js"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types", "jest", "node", "@testing-library/jest-dom"],
    "checkJs": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "*.ts",    
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "ios"
  ]
}
